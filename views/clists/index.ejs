<table style="border-collapse: collapse; width: 100%;">
    <% clist.forEach(clist => { %>  
        <tr class="tr">
                <td style="font-size: larger; font-weight: bold; width: 45%; padding-left: 5px;">
                    <%= clist.name %>  
                </td>
                <td style="font-size: small; color: darkgray; width: 25%;">
                    <%= clist.tags %> 
                </td>
                <td>
                    <a class="buttonsave" href="/clists/chores/<%= clist.id %>">Odpri</a>
                </td>
                <td>
                    <a class="buttongo" href="/clists/<%= clist.id %>/edit">Uredi</a>
                </td>
                <td>
                    <%- include('../partials/deleteform',{
                        url: `/clists/${clist.id}`
                    }) %>
                </td>
        </tr>
    <% }) %> 
</table>